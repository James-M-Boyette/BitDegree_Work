<!DOCTYPE html>
<html lang="eng">
	<%- include('./partials/header.ejs') %>
	<body>
		<%- include('./partials/navbar.ejs') %>

		<h2>My FAVORITE quotes!</h1>
		<!-- &#129315; -->
		<br />
		<section id="index-display">
			<% if (quotes.length > 0) { %> <% quotes.forEach(element => {%>
			<a class="single" href="/quotes/<%= element._id %>">
				<p class="snippet"><%= element.snippet %></p>
				<p class="title">~ <%= element.author %></p>
			</a>
			<% }) %> <% } else { %>
			<p>There are currently no quotes to display ...</p>
			<% } %>
		</section>
		<%- include('./partials/footer.ejs') %>
	</body>
</html>
